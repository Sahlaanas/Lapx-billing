{
  "name": "lapx-billing",
  "version": "1.0.0",
  "description": "LAP-X SOLUTIONS Billing & Invoice Software",
  "author": "LAP-X Solutions, Calicut",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64",
    "build-portable": "electron-builder --win portable --x64"
  },
  "build": {
    "appId": "com.lapx.billing",
    "productName": "LAP-X Billing",
    "copyright": "LAP-X Solutions, Calicut",
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] }
      ],
      "signingHashAlgorithms": null,
      "sign": null
    },
    "nsis": {
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LAP-X Billing",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "src/**/*",
      "package.json"
    ]
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  }
}
